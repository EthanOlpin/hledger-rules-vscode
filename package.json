{
  "name": "hledger-rules",
  "displayName": "hledger rules",
  "description": "language support for hledger CSV-parsing rules",
  "publisher": "EthanOlpin",
  "icon": "resources/icon.png",
  "keywords": [
    "hledger",
    "csv",
    "rules",
    "syntax"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/EthanOlpin/hledger-rules-vscode"
  },
  "version": "0.2.3",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test:grammar:update": "vscode-tmgrammar-snap --updateSnapshot --scope \"source.hledger-rules\" --grammar ./syntaxes/hledger-rules.tmLanguage.json ./test/test.csv.rules",
    "test:grammar": "vscode-tmgrammar-snap ./test/test.csv.rules",
    "test": "vscode-test && npm run test:grammar",
    "deploy": "vsce publish"
  },
  "contributes": {
    "languages": [
      {
        "id": "hledger-rules",
        "aliases": [
          "hledger rules",
          "hledger-rules"
        ],
        "extensions": [
          ".rules"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "hledger-rules",
        "scopeName": "source.hledger-rules",
        "path": "./syntaxes/hledger-rules.tmLanguage.json"
      }
    ]
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.2",
    "mocha": "^11.7.4",
    "typescript": "^5.9.3",
    "vscode-tmgrammar-test": "^0.1.3"
  }
}